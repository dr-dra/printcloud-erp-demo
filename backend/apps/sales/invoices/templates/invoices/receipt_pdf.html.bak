<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@300;600;800&display=swap" rel="stylesheet">
    <title>Payment Receipt</title>

    <style>
        @page { size: A5 landscape; margin: 10mm 10mm 25mm 10mm; }

        body {
            font-family: 'Source Sans 3', sans-serif;
            font-size: 10pt;
            margin: 0;
            color: #000;
        }

        .wrap { padding: 0; }

        table.receipt {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        .receipt td {
            border: 0;
            padding: 6px 8px;
            vertical-align: top;
        }

        /* âœ… GLOBAL vertical compaction */
        .receipt tr td {
            padding-top: 2px;
            padding-bottom: 2px;
        }

        .title {
            font-weight: 800;
            font-size: 16pt;
            text-align: right;
        }

        .section {
            font-weight: 800;
            text-transform: uppercase;
            font-size: 9pt;
        }

        .label {
            font-weight: 300;
            font-size: 8pt;
            white-space: nowrap;
        }

        .field {
            font-weight: 600;
            font-size: 8pt;
        }

        .muted {
            font-size: 8pt;
            font-weight: 300;
            line-height: 1.1;
        }

        .amount-display {
            font-size: 14pt;
            font-weight: 600;
            margin-bottom: 2px;
        }

        .amount-words {
            font-size: 7pt;
            font-weight: 300;
        }

        .qrbox {width:100%; }

        .qrbox svg {
            width: 60px;
            height: 60px;
        }

        .qr-cell {text-align: right;}

        /* Allocation */
        .allocation-title {
            font-size: 9pt;
            font-weight: 800;
            margin: 8px 0 4px 5px;
            text-transform: uppercase;
        }

        table.allocation-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 9pt;
        }

        table.allocation-table th,
        table.allocation-table td {
            border: 1px solid #000;
            padding: 4px 6px;
        }

        table.allocation-table th {
            background: #f5f5f5;
            font-weight: 300;
            text-align: right;
        }

        table.allocation-table th:first-child,
        table.allocation-table td:first-child {
            text-align: left;
            font-weight: 600;
            width: 40%;
        }

        table.allocation-table td.amount {
            text-align: right;
            font-weight: 600;
        }

        /* Footer */
        .footer-container {
            display: table;
            width: 100%;
            margin-top: 10px;
        }

        .footer-left,
        .footer-right {
            display: table-cell;
            vertical-align: bottom;
            width: 50%;
        }

        .footer-right {
            text-align: right;
        }

        .signature-line {
            border-top: 1px solid #000;
            width: 120px;
            margin-top: 70px;
        }

        .signature-label {
            font-size: 7pt;
            font-weight: 300;
        }

        .thank-you {
            font-size: 9pt;
            font-weight: 600;
        }
    </style>
</head>

<body>
<div class="wrap">

<table class="receipt">
    <colgroup>
        <col style="width:18%">
        <col style="width:54%">
        <col style="width:11%">
        <col style="width:17%">
    </colgroup>

    <!-- Title -->
    <tr>
        <td colspan="2"></td>
        <td colspan="2" class="title">PAYMENT RECEIPT</td>
    </tr>

    <!-- Customer + Meta -->
    <tr>
        <td class="label">Received From</td>
        <td rowspan="3">
            <div class="muted">
                <div style="font-weight:600;">
                    {{ invoice.customer.name|default:"Valued Customer" }}
                </div>
                {% if invoice.customer.address %}
                    {{ invoice.customer.address }}<br>
                {% endif %}
                {% if invoice.customer.phone %}
                    {{ invoice.customer.phone }}
                {% endif %}
            </div>
        </td>
        <td class="label">Receipt No.</td>
        <td class="field">{{ payment.receipt_number }}</td>
    </tr>

    <tr>
        <td></td>
        <td class="label">Date</td>
        <td class="field">{{ payment.payment_date|date:"d M Y" }}</td>
    </tr>

    <tr>
        <td></td>
        <td class="label">Cashier</td>
        <td class="field">{{ payment.created_by.get_full_name|default:"Staff" }}</td>
    </tr>

    <!-- Payment -->
    <tr>
        <td colspan="4" class="section">PAYMENT</td>
    </tr>

    <tr>
        <td class="label">Amount</td>
        <td colspan="2">
            <div class="amount-display">Rs. {{ payment.amount|floatformat:2 }}</div>
            <div class="amount-words">{{ amount_in_words }} only</div>
        </td>
        <td rowspan="3" class="qr-cell">
            <div class="qrbox">
                {{ qr_code_svg|safe }}
            </div>
        </td>
    </tr>

    <tr>
        <td class="label">Method</td>
        <td class="field-compact" colspan="2" rowspan="1"> {% if payment.payment_method == 'cheque' and payment.cheque_number %} {{ payment.cheque_number }} {% if payment.bank_name %} ({{ payment.bank_name }}){% endif %} {% if payment.cheque_date %} Dated: {{ payment.cheque_date|date:"d/m/Y" }}{% endif %} <span style="font-style: italic;">[Subject to realization]</span> {% elif payment.payment_method == 'bank_transfer' and payment.reference_number %} {{ payment.reference_number }} {% elif payment.payment_method == 'card' and payment.reference_number %} {{ payment.reference_number }} {% else %} - {% endif %} </td>
    </tr>

    <tr>
        <td class="label">Reference</td>
        <td colspan="2" class="field">
            {{ payment.reference_number|default:"-" }}
        </td>
    </tr>
</table>

<!-- Allocation -->
<div class="allocation-title">ALLOCATION</div>

<table class="allocation-table">
    <thead>
        <tr>
            <th>Document</th>
            <th>Prev Balance</th>
            <th>Paid</th>
            <th>Balance After</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Invoice #{{ invoice.invoice_number }}</td>
            <td class="amount">Rs. {{ invoice.balance_due|add:payment.amount|floatformat:2 }}</td>
            <td class="amount">Rs. {{ payment.amount|floatformat:2 }}</td>
            <td class="amount">Rs. {{ invoice.balance_due|floatformat:2 }}</td>
        </tr>
    </tbody>
</table>

<!-- Footer -->
<div class="footer-container">
    <div class="footer-left">
        <div class="signature-line"></div>
        <div class="signature-label">Prepared By</div>
    </div>
    <div class="footer-right">
        <div class="thank-you">Thank you for your payment!</div>
    </div>
</div>

</div>
</body>
</html>
